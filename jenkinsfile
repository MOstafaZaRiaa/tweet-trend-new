def registry = 'https://zariaa.jfrog.io'
def imageName = 'zariaa.jfrog.io/tweet-trend-docker-local/tweet-trend'
def version = '2.1.2'

pipeline {
    agent { label 'maven' }
    environment {
        PATH = "/opt/apache-maven-3.9.4/bin:$PATH"
    }
    stages {

        stage("Deploy") {
            steps {
                script {
                   docker.withRegistry(registry, 'jfrogartifact-credentials') {
                         sh 'chmod +x ./deploy.sh'
                         sh 'sudo ./deploy.sh'
                    } 
                     
                }
            }
        }
    }
}
